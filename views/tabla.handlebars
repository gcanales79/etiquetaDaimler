<div class="container">
    <form>
        <div class="form-group">
            <label for="cantidadAbuscar">Últmos Registros a Buscar</label>
            <input type="number" autofocus="autofocus" class="form-control" id="cantidadAbuscar">
            <small id="emailHelp" class="form-text text-muted">ültimos Registros a Buscar</small>
        </div>
        <button type="submit" class="btn btn-primary" id="buscarRegistros">Submit</button>
    </form>
    <br>


    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Serial</th>
                    <th scope="col">Repetida</th>
                    <th scope="col">Fecha Creacion</th>
                    <th scope="col">Ultima Actualizacion</th>
                </tr>
            </thead>
            <tbdody>
                {{#each etiqueta}}
                <tr>
                    <th scope="row">{{this.serial}}</th>
                    <td>{{#if this.repetida}}Si{{else}}No{{/if}}</td>
                    <td>{{moment this.createdAt format="DD-MM-YYYY"}}</td>
                    <td>{{moment this.updatedAt format="DD-MM-YYYY"}}</td>
                </tr>
                {{/each}}
            </tbdody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery.js"></script>
<script src="/js/tabla.js"></script>