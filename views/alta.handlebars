<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Dar de Alta Usuarios</h2>
            {{#if sessionFlash}}
            {{#each sessionFlash}}

            <div class="{{type}}">
                {{message}}
            </div>
            {{/each}}
            {{/if}}
            
            <form class="signup" method="post" action="/api/signup">
                <div class="form-group">
                    <label for="exampleInputEmail1">Correo</label>
                    <input type="email" class="form-control" name="email" id="email-input" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="password-input" placeholder="Password">
                </div>
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <button type="submit" class="btn btn-default">Alta</button>
            </form>
            <br />
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery.js"></script>